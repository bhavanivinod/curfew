<?xml version="1.0" encoding="UTF-8"?>
<templates>
 <t t-name="epass_application">
 <div class="maindiv">
 		<div class="grid-container">
    	<div class="container padd_img">
    	<h2 class="header p-2 offset-2">Epass Application Form</h2>
	    	<div class="p-2">
	    		<div class="row">
		    	<div class="offset-1"></div>
					<div class="col-6">
						<label for="curfew_epass_category" class="all-label">Pass Category</label>
						<select class="form-control"  id="curfew_epass_category" name="curfew_epass_category">
						     <option value='1'>Doctors</option>
						     <option value='2'>Government Employees</option>
						     <option value='3'>Private Employees</option>
						     <option value='4'>Vendors</option>
						     <option value='5'>Student</option>
						 </select>
						<label id="citizen_name_err" class="err">Invalid Category</label>
					</div>
				</div>	
		    	<div class="row">
		    	<div class="offset-1"></div>
					<div class="col-6">
						<label for="state_name" class="all-label">Name</label>
						<input type="text" id="citizen_name" name="citizen_name" class="form-control" autocomplete="off" placeholder="Enter your name"/>
						<label id="citizen_name_err" class="err">Invalid Name</label>
					</div>
				</div>	
				<div class="row">
				<div class="offset-1"></div>
					<div class="col-6">
						<label for="citizen_dob" class="all-label" >Date of birth</label>
						<input type="date" id="citizen_dob" name="citizen_dob" class="form-control" autocomplete="off" placeholder="Enter your date of birth"/>
						<label id="citizen_dob_err" class="err">Invalid Dob</label>
					</div>
				</div>
				<div class="row">
				<div class="offset-1"></div>	
					<div class="col-6">
						<label for="citizen_address" class="all-label">Address</label>
						<input type="text" id="citizen_address" name="citizen_address" class="form-control" autocomplete="off" placeholder="Enter your street address"/>
						<label id="citizen_address_err" class="err">Inavlid Address</label>
					</div>
				</div>
				<div class="row">
				<div class="offset-1"></div>	
					<div class="col-6">
						<label for="district_name" class="all-label">District</label>
						<input type="text" id="district_name" name="district_name" class="form-control" autocomplete="off" placeholder="Enter district name"/>
						<label id="district_name_err" class="err">Invalid district name</label>
					</div>
				</div>
				<div class="row">
				<div class="offset-1"></div>	
					<div class="col-6">
						<label for="citizen_email" class="all-label">Email</label>
						<input type="email" id="citizen_email" name="citizen_email" class="form-control" autocomplete="off" placeholder="Enter your email"/>
						<label id="citizen_email_err" class="err">Invalid Email</label>
					</div>
				</div>
				<div class="row">
				<div class="offset-1"></div>	
					<div class="col-6">
						<label for="citizen_vehicle_no" class="all-label">Vehicle No</label>
						<input type="text" id="citizen_vehicle_no" name="citizen_vehicle_no" class="form-control" autocomplete="off" placeholder="Enter your vehicle number"/>
						<label id="citizen_vehicle_no_err" class="err">Invalid Vehicle No</label>
					</div>
				</div>
				<div class="row">
				<div class="offset-1"></div>	
					<div class="col-6">
						<label for="citizen_vehicle_type" class="all-label">Vehicle type</label>
						<input type="text" id="citizen_vehicle_type" name="citizen_vehicle_type" class="form-control" autocomplete="off" placeholder="Enter your vehicle type"/>
						<label id="citizen_vehicle_type_err" class="err">Invalid Vehicle Type</label>
					</div>
				</div>
				<div class="row">
				<div class="offset-1"></div>	
					<div class="col-6">
						<label for="from_date" class="all-label">From Date</label>
						<input type="date" id="from_date" name="from_date" class="form-control" autocomplete="off" placeholder="Enter from date"/>
						<label id="from_date_err" class="err">Invalid Date</label>
					</div>
				</div>
				<div class="row">
				<div class="offset-1"></div>	
					<div class="col-6">
						<label for="to_date" class="all-label">To Date</label>
						<input type="date" id="to_date" name="to_date" class="form-control" autocomplete="off" placeholder="Enter from date"/>
						<label id="to_date_err" class="err">Invalid Date</label>
					</div>
				</div>
				<div class="row">
				<div class="offset-1"></div>	
					<div class="col-6">
						<label for="from_place" class="all-label">Start Place</label>
						<input type="text" id="from_place" name="from_place" class="form-control" autocomplete="off" placeholder="Enter start place"/>
						<label id="from_place_err" class="err">Invalid Date</label>
					</div>
				</div>
				<div class="row">
				<div class="offset-1"></div>	
					<div class="col-6">
						<label for="to_place" class="all-label">Destination</label>
						<input type="place" id="to_place" name="to_place" class="form-control" autocomplete="off" placeholder="Enter your destination"/>
						<label id="to_place_err" class="err">Invalid Date</label>
					</div>
				</div>
				<div class="row">
				<div class="offset-1"></div>	
					<div class="col-sm-6" style="text-align:center;" >
						<input type="button" class="btn btn-light" value="Submit" id="insert_all_details"/>
					</div>
				</div>
				<div class="footer"></div>					
		</div>	
		
	</div>
	</div>
	</div>
	
   </t>
   
</templates>